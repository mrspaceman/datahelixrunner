<GridPane alignment="CENTER" hgap="10" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scottlogic.deg.runner.DataHelixController">
